<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  <script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>
  <link rel='stylesheet' href='/stylesheets/login.css' />
</head>
<section>

  <body>
    <div class="login-box">
      <form action="/login" method="post">
        <h2>Login</h2>
        
        <div class="err">
          <% if (fieldEmptyErr) { %> <p class="error">please fill the details</p> <script>setTimeout(()=>{window.location.reload();},5000)</script>
              
          <% } else if (blocked) { %> <p class="error">sorry user blocked</p> <script>setTimeout(()=>{window.location.reload();},5000)</script>

          <% } else if (passwordErr) { %><h2 class="error">no user password found</h2> <script>setTimeout(()=>{window.location.reload();},5000)</script>

          <% } else if (AlreadyExist) { %><p class="error">User already exists</p> <script>setTimeout(()=>{window.location.reload();},5000)</script> <% } %>
           </div>

        <div class="input-box">
          <span class="icon"><ion-icon name="mail"></ion-icon></span>
          <input type="email" name="email" value="alannixon2520@gmail.com" class="inputBox" placeholder="Email">
        </div>
        <div class="input-box">
          <input type="password" id="Pass" name="password" value="alan@2520" class="inputBox" required
            placeholder="password">
          <span><i onclick="Eyefunc()" style="cursor: pointer;" id="logo" class="fa fa-eye-slash icon"></i></span>
        </div>
        <div class="remember-forget">
          <label for=""></label>
          <a href="/signup">New User sign up?</a>
        </div>
        <button type="submit">Login</button>

      </form>
    </div>
</section>
<script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
<script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
<script>
  function Eyefunc() {
    let show = document.getElementById('Pass')
    let logo = document.getElementById('logo')
    if (show.type == "password") {
      show.type = "text"
      logo.className = "fa fa-eye icon"
    } else {
      logo.className = "fa fa-eye-slash icon"
      show.type = "password"
    }
  }
</script>
</body>

</html>